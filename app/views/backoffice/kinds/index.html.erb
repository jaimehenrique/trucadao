<h1 class="page-header">Kinds</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    List

    <%= link_to new_backoffice_kind_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
        <i class="fa fa-plus"></i>
    <% end -%>

  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
          <thead>
              <tr>
                  <th>#</th>
                  <th>Description</th>
                  <th></th>
              </tr>
          </thead>
          <tbody>

            <% @kinds.each do |kind| %>
              <tr>
                <td><%= kind.id %></td>
                <td><%= kind.description %></td>
                <td style="width: 85px">

                  <%= link_to edit_backoffice_kind_path(kind.id), class: "btn btn-primary btn-circle"  do %>
                      <i class="fa fa-edit"></i>
                  <% end -%>

                  <button type="button" class="btn btn-danger btn-circle">
                    <i class="fa fa-times"></i>
                  </button>
                </td>
              </tr>
            <% end -%>

          </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>
