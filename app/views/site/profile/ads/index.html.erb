<h1>Listando Anúncios</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Imagem</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Preço</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @ads.each do |ad| %>
        <tr>
          <th scope="row"><%= ad.id %></th>
          <td><%= image_tag ad.picture(:thumb) %></td>
          <td><%= ad.brand %></td>
          <td><%= ad.model %></td>
          <td><%= humanized_money_with_symbol ad.price %></td>
           <td>
            <%= link_to edit_site_profile_ad_path(ad), class:"btn btn-primary btn-sm" do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
