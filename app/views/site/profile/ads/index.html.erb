<h1>Listando Anúncios</h1>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Imagem</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Preço</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @ads.each do |ad| %>
        <tr>
          <th scope="row"><%= ad.id %></th>
          <td><%= image_tag ad.picture(:thumb) %></td>
          <td><%= ad.brand.name %></td>
          <td><%= ad.model.name %></td>
          <td><%= ad.price == 0 ? "A negociar" : (humanized_money_with_symbol ad.price) %></td>
          <td >
            <%= link_to edit_site_profile_ad_path(ad), class:"btn btn-primary btn-sm" do %>
              <i class="glyphicon glyphicon-edit"></i>
            <% end %>
            <%= link_to site_profile_ad_path(ad), method: :delete, class: "btn btn-primary btn-danger", data: {confirm: "Você deseja realmente excluir anúncio: #{ad.brand.name} #{ad.model.name} ?"} do %>
              <i class="glyphicon glyphicon-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
